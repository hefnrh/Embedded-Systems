<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.nibonn.lovepinche.MainActivity">

    <TabHost
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@android:id/tabhost"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#b6fff1">
            </TabWidget>

            <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_above="@android:id/tabs"
                    android:layout_marginBottom="5dp">

                <RelativeLayout
                        android:id="@+id/find_car_tab"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">

                            <TextView
                                    android:id="@+id/user_title"
                                    android:text="Hi//username"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:textColor="#ffffff"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="出发地"
                                    android:id="@+id/textView"
                                    android:background="@drawable/label_bg_main"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:textSize="15sp"
                                    android:layout_below="@+id/user_title"
                                    android:layout_alignRight="@+id/textView4"
                                    android:layout_alignEnd="@+id/textView4"
                                    android:layout_marginTop="10dp"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="目的地"
                                    android:id="@+id/textView2"
                                    android:layout_marginTop="45dp"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="10dp"
                                    android:paddingBottom="5dp"
                                    android:background="@drawable/label_bg_main"
                                    android:layout_below="@+id/textView"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:textSize="15sp"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="时间段"
                                    android:id="@+id/textView3"
                                    android:layout_below="@+id/textView2"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginTop="45dp"
                                    android:background="@drawable/label_bg_main"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="10dp"
                                    android:paddingBottom="5dp"
                                    android:password="false"
                                    android:phoneNumber="false"
                                    android:singleLine="false"
                                    android:textSize="15sp"/>

                            <EditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/startAddressView"
                                    android:layout_toRightOf="@+id/textView"
                                    android:layout_marginLeft="26dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignBottom="@+id/textView"
                                    android:background="@drawable/input_bg"
                                    android:layout_alignTop="@+id/textView"/>

                            <EditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/arriveAddressView"
                                    android:layout_alignTop="@+id/textView2"
                                    android:layout_alignStart="@+id/startAddressView"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true"
                                    android:background="@drawable/input_bg"
                                    android:layout_above="@+id/textView3"/>

                            <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="常用地址"
                                    android:id="@+id/frequentStartAddressBtn"
                                    android:background="@drawable/alpha_button_bg"
                                    android:layout_below="@+id/startAddressView"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="5dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:onClick="onClick"
                                    android:layout_above="@+id/arriveAddressView"
                                    android:layout_marginBottom="5dp"
                                    android:textSize="15sp"
                                    />

                            <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="手机定位"
                                    android:id="@+id/startAddressLocateBtn"
                                    android:layout_alignBottom="@+id/frequentStartAddressBtn"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignTop="@+id/frequentStartAddressBtn"
                                    android:background="@drawable/alpha_button_bg"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:onClick="onClick"
                                    android:textSize="15sp"/>

                            <EditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="date"
                                    android:ems="10"
                                    android:id="@+id/beginDateView"
                                    android:layout_alignLeft="@+id/arriveAddressView"
                                    android:layout_alignStart="@+id/arriveAddressView"
                                    android:layout_alignRight="@+id/frequentStartAddressBtn"
                                    android:layout_alignEnd="@+id/frequentStartAddressBtn"
                                    android:layout_alignTop="@+id/textView3"
                                    android:layout_alignBottom="@+id/textView3"
                                    android:background="@drawable/input_bg"
                                    android:hint="XXXX-XX-XX"/>

                            <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="常用地址"
                                    android:id="@+id/frequentArriveAddressBtn"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:layout_below="@+id/arriveAddressView"
                                    android:layout_alignRight="@+id/frequentStartAddressBtn"
                                    android:layout_alignEnd="@+id/frequentStartAddressBtn"
                                    android:layout_alignLeft="@+id/frequentStartAddressBtn"
                                    android:layout_alignStart="@+id/frequentStartAddressBtn"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/alpha_button_bg"
                                    android:onClick="onClick"
                                    android:layout_above="@+id/beginDateView"
                                    android:layout_marginBottom="5dp"
                                    android:textSize="15sp"/>

                            <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="手机定位"
                                    android:id="@+id/arriveAddressLocateBtn"
                                    android:layout_alignTop="@+id/frequentArriveAddressBtn"
                                    android:layout_alignLeft="@+id/startAddressLocateBtn"
                                    android:layout_alignStart="@+id/startAddressLocateBtn"
                                    android:layout_alignBottom="@+id/frequentArriveAddressBtn"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true"
                                    android:onClick="onClick"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:background="@drawable/alpha_button_bg"
                                    android:textSize="15sp"/>

                            <EditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="time"
                                    android:ems="10"
                                    android:id="@+id/beginTimeView"
                                    android:layout_below="@+id/frequentArriveAddressBtn"
                                    android:layout_toRightOf="@+id/beginDateView"
                                    android:layout_alignBottom="@+id/beginDateView"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true"
                                    android:background="@drawable/input_bg"
                                    android:layout_marginLeft="15dp"
                                    android:hint="XX:XX"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="~"
                                    android:id="@+id/textView4"
                                    android:textSize="15sp"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:layout_alignRight="@+id/textView3"
                                    android:layout_alignEnd="@+id/textView3"
                                    android:layout_below="@+id/textView3"
                                    android:layout_marginTop="10dp"/>

                            <EditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="date"
                                    android:ems="10"
                                    android:id="@+id/endDateView"
                                    android:layout_alignTop="@+id/textView4"
                                    android:layout_alignLeft="@+id/beginDateView"
                                    android:layout_alignStart="@+id/beginDateView"
                                    android:layout_toLeftOf="@+id/beginTimeView"
                                    android:layout_alignBottom="@+id/textView4"
                                    android:background="@drawable/input_bg"
                                    android:hint="XXXX-XX-XX"/>

                            <EditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="time"
                                    android:ems="10"
                                    android:id="@+id/endTimeView"
                                    android:layout_alignTop="@+id/endDateView"
                                    android:layout_alignLeft="@+id/beginTimeView"
                                    android:layout_alignStart="@+id/beginTimeView"
                                    android:layout_alignBottom="@+id/endDateView"
                                    android:background="@drawable/input_bg"
                                    android:hint="XX:XX"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="我和我的小伙伴共"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_below="@+id/textView4"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/label_bg_main"
                                    android:textSize="15sp"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="10dp"
                                    android:paddingBottom="5dp"
                                    android:id="@+id/textView5"/>

                            <RadioGroup
                                    android:id="@+id/manRadioGroup"
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:layout_toRightOf="@+id/textView5"
                                    android:layout_alignTop="@+id/textView6"
                                    android:layout_toLeftOf="@+id/textView6"
                                    android:gravity="center">

                                <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="1"
                                        android:id="@+id/oneManRadioBtn"
                                        android:checked="false"/>

                                <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="2"
                                        android:id="@+id/twoManRadioBtn"/>

                                <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="3"
                                        android:id="@+id/threeManRadioBtn"/>
                            </RadioGroup>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="人"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="10dp"
                                    android:paddingBottom="5dp"
                                    android:password="false"
                                    android:phoneNumber="false"
                                    android:singleLine="false"
                                    android:background="@drawable/label_bg_main"
                                    android:layout_alignTop="@+id/textView5"
                                    android:id="@+id/textView6"/>

                            <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="全部重置"
                                    android:id="@+id/resetAllBtn"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true"
                                    android:background="@drawable/label_bg_main"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:layout_below="@+id/textView5"
                                    android:layout_marginTop="15dp"
                                    android:onClick="onClick"/>

                            <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="提交请求"
                                    android:id="@+id/submitBtn"
                                    android:layout_alignParentBottom="true"
                                    android:layout_toLeftOf="@+id/resetAllBtn"
                                    android:layout_marginRight="15dp"
                                    android:background="@drawable/label_bg_main"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:onClick="onClick"/>
                        </RelativeLayout>
                    </ScrollView>


                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/record_tab"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="record tab"/>
                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/setting_tab"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="setting tab"/>
                </RelativeLayout>
            </FrameLayout>
        </RelativeLayout>
    </TabHost>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户注册"
        android:id="@+id/textView"
        android:background="@drawable/button_bg"
        android:textColor="#ffffff"
        android:textSize="35dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="21dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="23dp"
        android:background="@drawable/button_bg"
        android:text="用户名"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_bg"
        android:text="密码"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认密码"
        android:id="@+id/textView2"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="真实姓名"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:gravity="center"
        android:background="@drawable/button_bg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身份证号"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="#ffffff"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号码"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:background="@drawable/button_bg"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/unSignUpView"
        android:layout_alignTop="@+id/editText"
        android:layout_toRightOf="@+id/editText"
        android:layout_above="@+id/editText2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pwSignUpView"
        android:layout_alignTop="@+id/editText2"
        android:layout_alignLeft="@+id/unSignUpView"
        android:layout_alignStart="@+id/unSignUpView"
        android:layout_above="@+id/textView2"
        android:layout_alignRight="@+id/unSignUpView"
        android:layout_alignEnd="@+id/unSignUpView"
        android:background="#ffffff"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pwConfirmSignUpView"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/pwSignUpView"
        android:layout_alignStart="@+id/pwSignUpView"
        android:layout_above="@+id/textView3"
        android:layout_alignRight="@+id/pwSignUpView"
        android:layout_alignEnd="@+id/pwSignUpView"
        android:background="#ffffff"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trueNameSignUpView"
        android:layout_alignLeft="@+id/pwConfirmSignUpView"
        android:layout_alignStart="@+id/pwConfirmSignUpView"
        android:layout_alignRight="@+id/pwConfirmSignUpView"
        android:layout_alignEnd="@+id/pwConfirmSignUpView"
        android:layout_above="@+id/textView4"
        android:layout_alignTop="@+id/textView3"
        android:background="#ffffff"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idSignUpView"
        android:layout_alignLeft="@+id/trueNameSignUpView"
        android:layout_alignStart="@+id/trueNameSignUpView"
        android:layout_alignRight="@+id/trueNameSignUpView"
        android:layout_alignEnd="@+id/trueNameSignUpView"
        android:layout_above="@+id/textView5"
        android:layout_alignTop="@+id/textView4"
        android:background="#ffffff"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneNumSignUpView"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignLeft="@+id/idSignUpView"
        android:layout_alignStart="@+id/idSignUpView"
        android:layout_alignRight="@+id/idSignUpView"
        android:layout_alignEnd="@+id/idSignUpView"
        android:layout_alignBottom="@+id/textView5"
        android:background="#ffffff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"
        android:id="@+id/uploadSignUpBtn"
        android:background="@drawable/button_bg"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出"
        android:id="@+id/quitSignUpBtn"
        android:layout_alignTop="@+id/uploadSignUpBtn"
        android:layout_alignRight="@+id/phoneNumSignUpView"
        android:layout_alignEnd="@+id/phoneNumSignUpView"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_bg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>


</RelativeLayout>